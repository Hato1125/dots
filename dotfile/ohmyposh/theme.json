{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "diamond",
          "foreground": "#000000",
          "background": "#ffffff",
          "leading_diamond": "",
          "trailing_diamond": "",
          "template": " {{ .PWD }} "
        }
      ]
    }
  ]
}
